{
  "manifest_version": 3,
  "name": "AI Prompt Saver",
  "version": "1.0",
  "description": "Capture prompts from supported AI websites, save chats, and generate long summaries using Groq API.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://api.groq.com/*",

    "https://chat.openai.com/*",
    "https://chatgpt.com/*",

    "https://claude.ai/*",
    "https://*.anthropic.com/*",

    "https://deepseek.com/*",
    "https://*.deepseek.com/*",

    "https://perplexity.ai/*",
    "https://*.perplexity.ai/*",

    "https://grok.com/*",
    "https://*.grok.com/*",
    "https://x.ai/*",
    "https://grok.x.ai/*",

    "https://gemini.google.com/*",
    "https://*.google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/icon.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",

        "https://claude.ai/*",
        "https://*.anthropic.com/*",

        "https://deepseek.com/*",
        "https://*.deepseek.com/*",

        "https://perplexity.ai/*",
        "https://*.perplexity.ai/*",

        "https://grok.com/*",
        "https://*.grok.com/*",
        "https://x.ai/*",
        "https://grok.x.ai/*",

        "https://gemini.google.com/*",
        "https://*.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
